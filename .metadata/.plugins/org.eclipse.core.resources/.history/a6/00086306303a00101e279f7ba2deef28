  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
/* USER CODE BEGIN MX_GPIO_Init_1 */
/* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOD_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOD, GPIO_PIN_13, GPIO_PIN_RESET);

  /*Configure GPIO pin : PD13 */
  GPIO_InitStruct.Pin = GPIO_PIN_13;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOD, &GPIO_InitStruct);

/* USER CODE BEGIN MX_GPIO_Init_2 */
/* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
void Speaker_Beep(uint32_t duration_ms)
{
    htim2.Instance->CCR2 = 470;
    HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_2);
    osDelay(duration_ms);
    HAL_TIM_PWM_Stop(&htim2, TIM_CHANNEL_2);
}
/* USER CODE END 4 */

/* USER CODE BEGIN Header_co_measure_task */
/**
  * @brief  Function implementing the CoMeasureTask thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_co_measure_task */
void co_measure_task(void *argument)
{
  /* USER CODE BEGIN 5 */
	uint32_t adc_value;
	float Vcc = 5.0;
	float RL = 5470; // 10kΩ
	float T = 23.0f;  // temperatura
	float H = 50.0f;  // vlažnost
	float R0;
	osMessageQueueGet(queue_r0Handle, &R0, NULL, osWaitForever);
	for(;;)
	{
		HAL_ADC_Start(&hadc1);
		if(HAL_ADC_PollForConversion(&hadc1, 100)== HAL_OK){
			adc_value = HAL_ADC_GetValue(&hadc1);
			float Vout = (adc_value * Vcc) / 4095.0;
			float Rs = ((Vcc - Vout) * RL) / Vout;

			float R0_compensated = R0 / (-0.0122f * T - 0.00609f * H + 1.7086f);
			float ratio = Rs / R0_compensated;
			float co_ppm = 19.709f * powf(ratio, -0.652f);
			if (co_ppm > 30) {
			    xSemaphoreGive(xSpeakerSemHandle);
			}
			char msg[64];
			snprintf(msg, sizeof(msg), "CO: %.1f ppm (ADC: %lu)\r\n", co_ppm, adc_value);
			HAL_UART_Transmit(&huart2, (uint8_t*)msg, strlen(msg), 100);
		}
		HAL_ADC_Stop(&hadc1);
		osDelay(500);
	}

  /* USER CODE END 5 */
}

/* USER CODE BEGIN Header_co_r0_task */
/**
* @brief Function implementing the CoRoTask thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_co_r0_task */
void co_r0_task(void *argument)
{
  /* USER CODE BEGIN co_r0_task */
  /* Infinite loop */
  for(;;)
  {
	  const uint32_t N = 100;         // broj uzoraka za kalibraciju
	const float Vcc = 5.0f;
	const float RL = 10000.0f;

	float T = 25.0f;
	float H = 50.0f;

	float R0_samples_sum = 0.0f;

	// Grejanje senzora


	for (uint32_t i = 0; i < N; i++) {
		HAL_ADC_Start(&hadc1);
		if (HAL_ADC_PollForConversion(&hadc1, 100) == HAL_OK) {
			uint32_t adc_value = HAL_ADC_GetValue(&hadc1);
			float Vout = (adc_value * Vcc) / 4095.0;
			float Rs = ((Vcc - Vout) * RL) / Vout;
			// Kompenzacija za temperaturu i vlagu prema tvojoj formuli
			float R0_i = Rs / (-0.0122f * T - 0.00609f * H + 1.7086f);

			R0_samples_sum += R0_i;
		}
		HAL_ADC_Stop(&hadc1);
		osDelay(50);  // mala pauza između merenja
	}

	float R0_avg = R0_samples_sum / N;
	HAL_UART_Transmit(&huart2, (uint8_t*)"R0\r\n", 4, 100);
	osMessageQueuePut(queue_r0Handle, &R0_avg, 0, 0);
	vTaskDelete(NULL);
	/* USER CODE END co_calibration_task */
  }

  /* USER CODE END co_r0_task */
}

/* USER CODE BEGIN Header_led_task */
/**
* @brief Function implementing the Led thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_led_task */
void led_task(void *argument)
{
  /* USER CODE BEGIN led_task */
  /* Infinite loop */
  for(;;)
  {
    osDelay(1);
  }
  /* USER CODE END led_task */
}

/* USER CODE BEGIN Header_speaker_alarm_task */
/**
* @brief Function implementing the Speaker thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_speaker_alarm_task */
void speaker_alarm_task(void *argument)
{
  /* USER CODE BEGIN speaker_alarm_task */
  /* Infinite loop */
  for(;;)
  {
	  if (xSemaphoreTake(xSpeakerSemHandle, portMAX_DELAY) == pdTRUE){
		Speaker_Beep(1000);
	}
  }
  /* USER CODE END speaker_alarm_task */
}

/**
  * @brief  Period elapsed callback in non blocking mode
  * @note   This function is called  when TIM6 interrupt took place, inside
  * HAL_TIM_IRQHandler(). It makes a direct call to HAL_IncTick() to increment
  * a global variable "uwTick" used as application time base.
  * @param  htim : TIM handle
  * @retval None
  */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  /* USER CODE BEGIN Callback 0 */

  /* USER CODE END Callback 0 */
  if (htim->Instance == TIM6) {
    HAL_IncTick();
  }
  /* USER CODE BEGIN Callback 1 */

  /* USER CODE END Callback 1 */
}

